<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- LogIn Activity Style -->
    <style name="UserInfoForm">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/login_form</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="UserInfoForm2" parent="UserInfoForm">
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="UserInfoFormContainer">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LoginButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_form</item>
    </style>

    <!-- Add act activity style -->
    <style name="AddActLineBase">
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">@dimen/add_act_form_width</item>
        <item name="android:layout_height">@dimen/add_act_form_height</item>
    </style>

    <style name="AddActTopLine" parent="AddActLineBase">
        <item name="android:background">@drawable/login_form</item>
    </style>

    <style name="AddActLine" parent="AddActTopLine">
        <item name="android:layout_marginTop">@dimen/add_act_form_line_padding</item>
    </style>

    <style name="AddActTransparentLine" parent="AddActLineBase">
        <item name="android:layout_marginTop">@dimen/add_act_form_line_padding</item>
    </style>

    <style name="AddActLineHalf">
        <item name="android:layout_width">@dimen/add_act_form_half_width</item>
        <item name="android:layout_height">@dimen/add_act_form_height</item>
        <item name="android:background">@drawable/login_form</item>
    </style>

    <style name="AddActButtons">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/login_form</item>
    </style>

    <style name="AddressPicker">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="ShowActLineTop" parent="AddActTopLine">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShowActLine" parent="ShowActLineTop">
        <item name="android:layout_marginTop">@dimen/add_act_form_line_padding</item>
    </style>

    <style name="ShowActButtonHighlighted" parent="AddActLineBase">
        <item name="android:layout_marginTop">@dimen/add_act_form_line_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_bg_highlighted</item>
        <item name="android:text">@string/apply_in</item>
    </style>

</resources>
